$(document).ready(function(){var pagetop=$('.pagetop');$(window).scroll(function(){if($(this).scrollTop()>300){pagetop.fadeIn();}else{pagetop.fadeOut();}});pagetop.click(function(){$('body, html').animate({scrollTop:0},500);return false;});});$(function(){var $body=$('body');$('#sp_btn').on('click',function(){$body.toggleClass('open');});$('#menu_list a').on('click',function(){$body.removeClass('open');});});$(document).ready(function(){if($(window).width()<481){if($('body.open')){}}});$(document).ready(function(){$("body a").not(".moreBtn a").not(".footerBtn a").hover(function(){$(this).stop();$(this).fadeTo("normal",0.3);},function(){$(this).stop()
$(this).fadeTo("normal",1.0);});});$(function(){$('a[href^=#]').click(function(){var speed=400;var href=$(this).attr("href");var target=$(href=="#"||href==""?'html':href);var position=target.offset().top;$('body,html').animate({scrollTop:position},speed,'swing');return false;});});$(function(){$('.inviewContents').on('inview',function(event,isInView,visiblePartX,visiblePartY){if(isInView){if(visiblePartY=='bottom','100px'){$(this).stop().addClass('fadein');}}});});